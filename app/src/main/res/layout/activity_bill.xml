<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BillActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pb_bill"
                android:layout_centerInParent="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_service_bill"
                    android:padding="14dp"
                    android:textSize="19sp"
                    android:text="Electrician"
                    android:gravity="left"
                    android:background="@android:color/holo_blue_dark"
                    android:textColor="@android:color/white"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="8dp"
                    android:background="#f2f2f2"
                    android:paddingTop="4dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mon, Dec 04, 11:45 AM"
                            android:paddingLeft="8dp"
                            android:textSize="17sp"
                            android:textColor="@android:color/black"
                            android:id="@+id/tv_date_bill"
                            android:gravity="left"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:id="@+id/tv_status_bill"
                            android:textSize="17sp"
                            android:text="Pending"
                            android:textStyle="bold"
                            android:paddingRight="12dp"
                            android:gravity="right"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:text="Address"
                        android:paddingTop="14dp"
                        android:textSize="17sp"
                        android:textColor="@android:color/black"
                        android:gravity="left"
                        android:paddingLeft="8dp"
                        android:id="@+id/tv_address_bill"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="60dp"
                        android:id="@+id/iv_user_bill"
                        android:src="@drawable/user2"
                        android:layout_gravity="left"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:textSize="19sp"
                        android:paddingTop="6dp"
                        android:id="@+id/tv_job_assigned_bill"
                        android:paddingLeft="6dp"
                        android:text="Job Not Yet Assigned"
                        android:textColor="@android:color/black" />

                    <LinearLayout
                        android:layout_weight="1.5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_marginTop="10dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_location_on_black_24dp"
                            android:layout_gravity="center"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:paddingTop="8dp"
                            android:text="Live Tracking" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="14dp"
                    android:paddingLeft="8dp">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Rate"
                        android:layout_marginRight="55dp"
                        android:textSize="17sp"/>

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_rate_bill"
                        android:textColor="#000000"
                        android:textSize="17sp"
                        android:text="Rs.50 - Rs.200 Per hour"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="12dp"
                    android:paddingLeft="8dp">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Tax"
                        android:layout_marginRight="55dp"
                        android:textSize="17sp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_tax_cgst__bill"
                            android:textColor="#000000"
                            android:paddingRight="22dp"
                            android:paddingBottom="10dp"
                            android:textSize="17sp"
                            android:text="null(CGST)"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_tax_sgst_bill"
                            android:textColor="#000000"
                            android:paddingRight="22dp"
                            android:textSize="17sp"
                            android:text="null(SGST)"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="14dp"
                    android:paddingLeft="8dp">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Discount"
                        android:layout_marginRight="55dp"
                        android:textSize="17sp"/>

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_discount_bill"
                        android:textColor="#000000"
                        android:textSize="17sp"
                        android:text="10%"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="14dp"
                    android:paddingLeft="8dp">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Grand Total"
                        android:layout_marginRight="55dp"
                        android:textSize="17sp"/>

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_grand_total_bill"
                        android:textColor="#000000"
                        android:textSize="17sp"
                        android:text="Rs.100"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="14dp"
                    android:paddingLeft="8dp">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Start Time"
                        android:layout_marginRight="55dp"
                        android:textSize="17sp"/>

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_start_time_bill"
                        android:textColor="#000000"
                        android:textSize="17sp"
                        android:text="12:00 PM"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="14dp"
                    android:paddingLeft="8dp">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="End Time"
                        android:layout_marginRight="55dp"
                        android:textSize="17sp"/>

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_end_time_bill"
                        android:textColor="#000000"
                        android:textSize="17sp"
                        android:text="02:00 PM"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="14dp"
                    android:paddingLeft="8dp">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Total Time"
                        android:layout_marginRight="55dp"
                        android:textSize="17sp"/>

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_total_time_bill"
                        android:textColor="#000000"
                        android:textSize="17sp"
                        android:text="2 Hrs"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="14dp"
                    android:paddingBottom="12dp"
                    android:paddingLeft="8dp">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Payment Status"
                        android:layout_marginRight="55dp"
                        android:textSize="17sp"/>

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_payment_status_bill"
                        android:textColor="@android:color/holo_red_dark"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:text="Pending"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp"
                    android:text="Job Details"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="22sp"
                    android:background="#f2f2f2"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Service required for ?"
                    android:textSize="16sp"
                    android:paddingLeft="12dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:paddingBottom="4dp"
                    android:paddingTop="6dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:paddingLeft="12dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_service_for_bill"
                    android:text="Fan ,Light, Switches"
                    android:textSize="16sp"
                    android:paddingBottom="6dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#C0C0C0" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Where do you require the service ?"
                    android:textSize="16sp"
                    android:paddingLeft="12dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:paddingBottom="4dp"
                    android:paddingTop="6dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:paddingLeft="12dp"
                    android:id="@+id/tv_service_place_bill"
                    android:layout_height="wrap_content"
                    android:text="Office"
                    android:textSize="16sp"
                    android:paddingBottom="6dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:textSize="16sp"
                    android:textColor="#ffffff"
                    android:text="Cancel Booking"
                    android:background="@android:color/holo_orange_dark"/>


            </LinearLayout>


        </RelativeLayout>


    </ScrollView>


</android.support.constraint.ConstraintLayout>